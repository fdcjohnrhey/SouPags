<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.AddOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/addOrderImg"
            android:layout_width="fill_parent"
            android:layout_height="270dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/addOrderFoodName"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignBottom="@+id/addOrderImg"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textSize="28sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/addOrderPrice"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="74dp"
        android:textSize="28sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/addOrderDesc"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:textSize="17sp"
        android:layout_marginHorizontal="20dp"
        android:text="TextView" />

    <Button
        android:id="@+id/addOrderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="bottom"
        android:text="Add to Cart" />
</LinearLayout>